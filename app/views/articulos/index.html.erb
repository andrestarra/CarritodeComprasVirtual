<h1>Lista de artículos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre del artículo</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.nombre %></td>
        <td><%= articulo.precio %></td>
        <td><%= articulo.cantidad %></td>
        <td><%= link_to 'Mostrar', articulo_path(articulo) %></td>
        <td><%= link_to 'Editar', edit_articulo_path(articulo) %></td>
        <td><%= link_to 'Eliminar', articulo_path(articulo),
                method: :delete,
                data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Agregar artículo', new_articulo_path %>